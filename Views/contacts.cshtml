@{
  Layout="Shared/_Layout.cshtml";
}

<div class="container text-center">
  <h1>Address Book</h1>
  @if(@Model.Count == 0)
  {
    <h3>No contacts have been added yet!</h3>
  }
  @foreach(var contact in Model)
  {
    <h3><a href="/contacts/@contact.GetId()">@contact.GetName()</a></h3>
  }
  <p><a href="/">Home</a></p>
</div>
